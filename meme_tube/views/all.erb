<% @rows.each do |row| %>
  <section class="entry">
    <p id="title"><%= row["name"] %></p>
    <p id="video"><iframe width="420" height="315" src="http://www.youtube.com/embed/<%= row["url"] %>" frameborder="0" allowfullscreen></iframe></p>
    <div>
      <p class="desc">Description:</p>
      <p><%= row["description"] %></p>
    </div>

    <div>
      <p class="desc">Genre:</p>
      <p><%= row["genre"] %></p>
    </div>

    <div id="all_buttons">
      <form action="/all/<%= row["id"]%>/delete" method="post">
        <button>Delete</button>
      </form>
      <form action="/all/<%= row["id"] %>/edit" method="get">
        <button>Edit</button>
      </form>
    </div>

  </section>
<% end %>

